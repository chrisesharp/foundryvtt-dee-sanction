<header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
        <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
        <div class="flexrow">
            <div class="resource flexcol" style="align-items: flex-start;">
              <label class="resource-label">{{localize "DEE.consequence.resource"}}</label>
              {{ log .}}
                <select name="system.resource">
                    {{selectOptions resources selected=data.resource }}
                </select> 
            </div>
            <div class="resource flexcol" style="text-align: center;">
                <label class="resource-label">{{localize "DEE.Potency"}}</label>
                <div>
                    {{#if (gt data.potency 0)}}<i class="fas fa-caret-up" style="font-size: small;text-align: right;"></i>{{/if}}
                    {{#if (lt data.potency 0)}}<i class="fas fa-caret-down" style="font-size: small;text-align: right;"></i>{{/if}}
                    <input id="potency-sel" type="text" style="width: 25%" name="system.potency" value="{{data.potency}}" data-dtype="Number" size="2" maxlength="2" />    
                </div>
            </div>
          </div>
    </div>
</header>