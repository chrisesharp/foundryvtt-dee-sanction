<section
  class='sheet-body tab notes {{tab.cssClass}}'
  data-group='primary'
  data-tab='notes'
>
  {{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
  {{#if editable}} 
    <prose-mirror name="system.description" data-document-u-u-i-d="{{item.uuid}}" value="{{data.description}}" collaborate="true" toggled="true">
      {{{enrichedDescription}}}
    </prose-mirror>
  {{else}} {{{enrichedDescription}}}
  {{/if}}
</section>