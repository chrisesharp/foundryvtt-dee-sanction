{{!-- expertise and abilities --}}
<section
  class='sheet-body tab effects flexcol {{tab.cssClass}}'
  data-group='primary'
  data-tab='effects'
>
<ol class="item-list effects-list">
    {{#each effects as |section sid|}}
        {{#unless (eq section.label "Temporary")}}
        <li class="items-header flexrow" data-effect-type="{{section.type}}">
        <h3 class="item-name effect-name flexrow">{{localize section.label}}</h3>
        <div class="effect-source">Source</div>
        <div class="item-controls effect-controls flexrow">
            <a class="effect-control" data-action="create" title="{{localize 'DEE.effect.Create'}}">
            <i class="fas fa-plus"></i>
            </a>
        </div>
        </li>

        <ol class="item-list">
        {{#each section.effects as |effect|}}
        <li class="item effect flexrow" data-effect-id="{{effect.id}}">
            <div class="item effect flexrow"
                data-effect-id='{{effect.id}}'
                data-parent-id='{{effect.parent.id}}'
                data-document-class='ActiveEffect'
                data-drag='true'
            >
                <h4 class="item-name effect-name">{{effect.name}}</h4>
                <div class="effect-source effect-name">{{effect.sourceName}}</div>
                <div class="item-controls effect-controls flexrow">
                <a class="effect-control" data-action="toggleEffect" title="{{localize 'DEE.effect.Toggle'}}">
                    <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
                </a>
                <a class="effect-control" data-action="editEffect" title="{{localize 'DEE.effect.Edit'}}">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="effect-control" data-action="deleteEffect" title="{{localize 'DEE.effect.Delete'}}">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </li>
        {{/each}}
        {{/unless}}
    </ol>
    {{/each}}
</ol>
</section>