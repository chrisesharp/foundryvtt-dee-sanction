<header class="sheet-header">
    <div class="flexcol" style="justify-content: center;align-items: center;">
      <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    </div>
    <div class="header-fields">
        <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
        <div class="grid grid-2col">
          <div class="resource">
            <label class="resource-label">{{ localize 'DEE.item.quantity'}}</label>
              <input type="text" name="system.quantity" value="{{data.quantity}}" data-dtype="Number"/>
          </div>
          <div class="resource">
            <label class="resource-label">{{ localize 'DEE.item.weight'}}</label>
              <input type="text" name="system.weight" value="{{data.weight}}" data-dtype="Number"/>
          </div>
        </div>
        <div class="flexrow">
          <label class="resource-label" style="padding-top: 5px;">{{ localize 'DEE.item.esoteric'}}</label>
          <input type="checkbox" name="system.esoteric" value="{{data.esoteric}}" {{checked data.esoteric }} data-dtype="Boolean"/>
        </div>
    </div>
</header>
