<section
  class='sheet-body tab abilities flexcol {{tab.cssClass}}'
  data-group='primary'
  data-tab='abilities'
>
<ol class="items-list">
    <li class="flexrow item-header">
        <div class="fortune-header">Abilities that are associated with this.</div>
        <div class="item-controls">
        <a class="item-control item-create" title="{{localize 'DEE.Add'}} {{localize 'DEE.Items'}}" data-type="ability"><i class="fas fa-plus"></i></a>
        </div>
    </li>
{{#each data.abilities as |ability id|}}
    <li class="item-entry flexcol" data-item-id="{{ability.id}}">
        <div class="entity item flexrow">
            <div class="item-image"><img src="{{ability.img}}" width="24" height="24"/></div>
            <h4 class="item-name">{{ability.name}}</h4>
            <div class="item-controls" data-item-id="{{ability.id}}">
                <a class="item-control" title="{{localize 'DEE.Edit'}} {{localize 'DEE.Items'}}"><i data-action="itemEdit" class="fas fa-edit"></i></a>
                <a class="item-control" title="{{localize 'DEE.Delete'}} {{localize 'DEE.Items'}}"><i data-action="itemDelete" class="fas fa-trash"></i></a>
            </div>
        </div>
    </li>
{{/each}}
</ol>
</section>