{{!-- resources --}}
<section
  class='sheet-body tab resources flexcol {{tab.cssClass}}'
  data-group='primary'
  data-tab='resources'
>
<div class="resources flexrow">
    {{!-- intellectuall --}}
    <div class="resource">
        <img class="resource-bg" src="systems/dee/assets/default/resource.png">
        <div class="resource-content resource-die flexrow flex-center">
            <div class="flexcol">
                {{#if (unlocked actor) }}
                <a class="step-up" data-resource="int"><i class="fas fa-caret-up" data-action="stepUp"></i></a>
                <a class="step-down" data-resource="int"><i class="fas fa-caret-down" data-action="stepDown"></i></a>
                {{else}}
                <span style="font-size: 2.0em; color: white;">
                    <i class="fas fa-caret-right"></i>
                </span>
                {{/if}}
            </div>
            <img class="step rollable" src="{{die data.resources.int.value}}" width="64" height="64" data-action="roll" data-roll="{{data.resources.int.value}}" data-label="{{ localize 'DEE.resource.int.long' }}" data-resource="int" title="{{ localize 'DEE.resource.roll.int'}}" >
        </div>
        <label for="data.resources.int.value" class="resource-label">&nbsp;&nbsp;{{ localize 'DEE.resource.int.long' }}</label>
    </div>
    {{!-- physicall --}}
    <div class="resource">
        <img class="resource-bg" src="systems/dee/assets/default/resource.png">
        <div class="resource-content resource-die flexrow flex-center">
            <div class="flexcol">
                {{#if (unlocked actor) }}
                <a class="step-up" data-resource="phy"><i class="fas fa-caret-up" data-action="stepUp"></i></a>
                <a class="step-down" data-resource="phy"><i class="fas fa-caret-down" data-action="stepDown"></i></a>
                {{else}}
                <span style="font-size: 2.0em; color: white;">
                    <i class="fas fa-caret-right"></i>
                </span>
                {{/if}}
            </div>
            <img class="step rollable" src="{{die data.resources.phy.value}}" width="64" height="64" data-action="roll" data-roll="{{data.resources.phy.value}}" data-label="{{ localize 'DEE.resource.phy.long' }}" data-resource="phy" title="{{ localize 'DEE.resource.roll.phy'}}" >
        </div>
        <label for="data.resources.phy.value" class="resource-label">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ localize 'DEE.resource.phy.long' }} </label>
    </div>
    {{!-- supernaturall --}}
    <div class="resource">
        <img class="resource-bg" src="systems/dee/assets/default/resource.png">
        <div class="resource-content resource-die flexrow flex-center flex-between">
            <div class="flexcol">
                {{#if (unlocked actor) }}
                <a class="step-up" data-resource="sup"><i class="fas fa-caret-up" data-action="stepUp"></i></a>
                <a class="step-down" data-resource="sup"><i class="fas fa-caret-down" data-action="stepDown"></i></a>
                {{else}}
                <span style="font-size: 2.0em; color: white;">
                    <i class="fas fa-caret-right"></i>
                </span>
                {{/if}}
            </div>
            <img class="step rollable" src="{{die data.resources.sup.value}}" width="64" height="64" data-action="roll" data-roll="{{data.resources.sup.value}}" data-label="{{ localize 'DEE.resource.sup.long' }}" data-resource="sup" title="{{ localize 'DEE.resource.roll.sup'}}" >
        </div>
        <label for="data.resources.sup.value" class="resource-label">&nbsp;{{ localize 'DEE.resource.sup.long' }}</label>
    </div>
    {{#if (unlocked actor) }}
    <div class="resource-balance">
        <i class="{{balance data.resources}}" title="Resources {{balanceTip data.resources}}"></i>
    </div>
    {{/if}}
</div>
{{!-- injuries and consequences --}}
<div class="sheet-injuries-table">
    {{!-- injuries --}}
    <div class="flexcol">
        <div class="injury-header" style="padding-top: 0.4em;padding-left: 1.3em;">{{ localize 'DEE.Injuries'}}</div>
        <div class="hits" title="{{ localize 'DEE.HitsDetail'}}">
            <img class="hits-bg" src="systems/dee/assets/default/hits.png">
            <label for="data.hits.value" class="resource-label">&nbsp;{{ localize 'DEE.Hits'}}</label>
            <div class="hits-val flexrow flex-center">
                <input type="text" name="system.hits.value" value="{{data.hits.value}}" data-dtype="Number" placeholder="3" maxlength="1"/>
            </div>
            <div class="hits-falters" title="{{ localize 'DEE.FalterDetail'}}">
                <input class="first" type="checkbox" name="system.falters.first" {{checked data.falters.first }} data-dtype="Boolean"/>
                <input class="second" type="checkbox" name="system.falters.second" {{checked data.falters.second }} data-dtype="Boolean"/>
            </div>
        </div>
    </div>
    {{!-- consequences --}}
    <div class="consequences" title="{{ localize 'DEE.DragConsequences'}}">
        <ol class="items-list">
            <li class="flexrow item-header">
                <div class="injury-header">{{ localize 'DEE.Consequences'}}</div>
            </li>
            {{#each data.consequences as |item id|}}
                <li class="item-entry flexcol" data-item-id="{{item.id}}">
                    <div class="item flexrow" data-item-id="{{item.id}}">
                        <a data-action="itemSummary"><h4 class="item-name">{{item.name}}</h4></a>
                        <div class="item-controls" data-item-id="{{item.id}}">
                            <a class="item-control" title="{{localize 'DEE.Edit'}} {{localize 'DEE.Consequences'}}"><i data-action="itemEdit" class="fas fa-edit"></i></a>
                            <a class="item-control" title="{{localize 'DEE.Delete'}} {{localize 'DEE.Consequences'}}"><i data-action="itemDelete" class="fas fa-trash"></i></a>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ol>
    </div>
</div>
</section>